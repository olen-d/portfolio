{{#each all.about}}
    <div class="container">
        <div class="row">
          <div class="twelve columns">
              <div class="hexa">
                <div class="hex1">
                  <div class="hex2">
                    <img src="../../assets/images/headshot_01.jpg" alt="Olen Daelhousen's Headshot" width="100%" height="auto">
                  </div>
                </div>
              </div>
              <div class="main-header-wrapper">
                <div class="main-header">
                  <h1>
                    {{firstName}}&nbsp;{{lastName}}
                  </h1>
                  <h4 class="title">
                    {{title}}
                  </h4>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="one column">
            &nbsp;
          </div>
          <div class="ten columns">
             <p>
               {{{bio}}}
               </p>
          </div>
          <div class="one column">
            &nbsp;
          </div>
        </div>
        <div class="row">
          <div class="one column">
            &nbsp;
          </div>
          <div class="ten columns">
            <h1>Projects</h1>
          </div>
          <div class="one column">
            &nbsp;
          </div>
        </div>
        <div class="row">
          <div class="one column">
            &nbsp;
          </div>
          <div class="ten columns">
            {{#each ../all.projects}}
              <div class="card u-pull-left">
                <div class="card-title">
                    <img src="{{screenshot}}" width="350" height="auto" alt="Screenshot of {{projectTitle}}">
                    <h2>{{projectTitle}}</h2>
                    <p>{{description}}</p>
                    <p><a href="{{deployedLink}}">Visit the project</a>.</p>
                    <p><a href="{{repoLink}}">See the code on Github</a>.</p>
                </div>
              </div>
            {{~/each}}
          </div>
          <div class="one column">
            &nbsp;
          </div>
        </div>
        <div class="row">
          <div class="one column">
            &nbsp;
          </div>
          <div class="ten columns">
            <h1>Get in Touch</h1>
            <p>
              You've made it this far, so please take the time to reach out and start discussing your project with me. I can be contacted at {{formatTel tel "usStd"}}, or send an email to <a href="mailto:{{email}}">{{email}}</a>.
            </p>
          </div>
          <div class="one column">
            &nbsp;
          </div>
        </div>
        <div class="row">
          <div class="one column">
            &nbsp;
          </div>
          <div class="five columns">
            <form id="contactForm">
              <label for="name">Name</label>
              <input type="text" class="u-full-width" id="name" placeholder="Your Name" required>
          </div>
          <div class="five columns">
              <label for="title">Email Address</label>
              <input type="email" class="u-full-width" id="email" placeholder="Your Email Address" required>
          </div>
          <div class="one column">
              &nbsp;
          </div>  
        </div>
        <div class="row">
          <div class="one column">
              &nbsp;
          </div>
          <div class="ten columns">
              <label for="message">Message</label>
              <textarea class="u-full-width" id="message" placeholder="Let me know what you need..." ></textarea>
              <div id="message-status"></div>
          </div>
          <div class = "one column">
              &nbsp;
          </div>
        </div>
        <div class="row">
          <div class="one column">
              &nbsp;
          </div>
          <div class="ten columns">
              <button type="submit" class="button-primary" id="submitMessage">Send a Message</button>
          </div>
          <div class="one column">
              &nbsp;
          </div>
          </form>
      </div>
      </div>
      <div class="footer">
        <p>
          Copyright &copy; 2019 {{firstName}} {{lastName}}
        </p>
      </div>
{{/each}}